  },
  "RabbitMq": {
    "HostName": "localhost",
    "Port": 5672,
    "UserName": "ecommerce_user",
    "Password": "Test@1234",
    "VirtualHost": "ecommerce_vhost"
  },

  "JwtSettings": {
    "Issuer": "UserService.API",
    "SecretKey": "fPXxcJw8TW5sA+S4rl4tIPcKk+oXAqoRBo+1s2yjUS4="
